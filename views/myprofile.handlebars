
<div class="container-fluid">
    <div class="row jumbotron admin-jumbo text-center">
        <h1 class="col-12">My Profile</h1>
    </div>
</div>

<div class="row no-gutters profile-row" id="user-topic">
    <form class="col-12" id="myprofile-form">
        <div class="form-group">
            <label for="update_user_name"><strong>Current Username: </strong>{{profile.user_name}}</label>
            <input type="text" class="form-control" id="update_user_name" placeholder="Update Username">
        </div>
        <div class="form-group">
            <label for="update_first_name"><strong>Current First Name: </strong>{{profile.first_name}}</label>
            <input type="text" rows="5" class="form-control" id="update_first_name" placeholder="Update First Name">
        </div>
        <div class="form-group">
            <label for="update_last_name"><strong>Current Last Name: </strong>{{profile.last_name}}</label>
            <input type="text" rows="5" class="form-control" id="update_last_name" placeholder="Update Last Name">
        </div>  
        <div class="form-group">
            <label for="update_email"><strong>Current Email: </strong>{{profile.email}}</label>
            <input type="text" rows="5" class="form-control" id="update_email" placeholder="Update Email">
        </div>    
        <div class="form-group">
            <label for="confirm1-update-password"><strong>New Password:</strong></label>
            <input type="password" class="form-control" id="confirm1-update-password" placeholder="">
        </div>
        <div class="form-group">
          <div class="" id="update-password-error"></div>
        </div>
        <div class="form-group">
            <label for="confirm2-update-password"><strong>Confirm Password:</strong></label>
            <input type="password" class="form-control" id="confirm2-update-password" placeholder="">
        </div>
        <div class="form-group">
          <div class="" id="update-confirmpswd-error"></div>
        </div>
        <div class="form-group">
          <label for="update-file-input"><strong>Update Profile Picture:</strong></label>
          <input type="file" class="form-control" id="update-file-input">
        </div>
        <div class="form-group">
          <div class="" id="update-profile-error"></div>
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn col-md-4 col-12">Save Changes</button>
        </div>
    </form>
</div>

