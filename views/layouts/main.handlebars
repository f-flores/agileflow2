            </div>
        </div>
    </div>

    {{!-- Post Modal --}}
    <div class="modal fade" id="postModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title">Post Your Question</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                   <form class="col-12">
                        <div class="form-group">
                            <label for="add_topic_title">Enter Topic Title - Up To 100 Characters</label>
                            <input type="text" class="form-control" id="add_topic_title" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="add_topic_body">Enter Description - Up To 250 Characters</label>
                            <textarea type="text" rows="5" class="form-control" id="add_topic_body" placeholder=""></textarea>
                        </div>
                        <div class="form-group" id="modal-error-text">
                            {{!-- text added here --}}
                        </div>   
                    </form> 
                </div>
                <div class="modal-footer justify-content-around">
                    <button type="submit" class="btn col-12 col-md-5 add-topic">Submit</button>
                    <button type="close" class="btn col-12 col-md-5" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{!-- Sign Up Modal --}}
    <div class="modal fade" id="at-signup-filling" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title">Sign Up</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                   <form class="col-12" id="modal-signup-form">
                        <div class="form-group">
                            <input type="text" class="form-control" id="first-name" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="last-name" placeholder="Last Name">
                            <div class="form-control" id="signup-name-error"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="user-name" placeholder="Username">
                            <div class="form-control" id="signup-username-error"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="user-email" placeholder="eMail">
                            <div class="form-control" id="signup-email-error"></div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="user-password" placeholder="Password">
                            <div class="form-control" id="signup-password-error"></div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirm-password" placeholder="Confirm Password">
                            <div class="form-control" id="signup-confirmpswd-error"></div>
                        </div>
                        <div class="form-group">
                            <label for="file-input">Profile Picture:</label>
                            <input type="file" class="d-inline-flex form-control" id="file-input">
                        </div>
                        <div class="form-group" id="signup-error">
                            {{!-- text added here --}}
                        </div>    
                  </div>
                <div class="modal-footer justify-content-around">
                    <button type="submit" class="btn btn-lgin col-12 col-md-5">Signup</button>
                    </form>
                    <button type="close" class="btn col-12 col-md-5" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    {{!-- login Modal --}}
    <div class="modal fade" id="at-login" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
