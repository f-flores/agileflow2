                    <h5 class="modal-title" id="modal-title">Sign Up</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                   <form id="login-form">
                        <div class="form-group">
                            <input type="email" class="form-control" id="login-email" placeholder="Email">
                            <div class="error-text" id="login-email-error"></div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="login-password" placeholder="Password">
                            <div class="error-text" id="login-password-error"></div>
                        </div>
                        <div class="form-group">
                            <div class="error-text" id="login-error"></div>
                        </div>
                </div>
                <div class="modal-footer justify-content-around">
                    <button type="submit" class="btn btn-lgin col-12 col-md-5">Login</button>
                    </form> 
                    <button type="close" class="btn col-12 col-md-5" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


